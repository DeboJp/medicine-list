{
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recommended",
      "stylelint-config-prettier",
      "stylelint-prettier/recommended",
      "stylelint-config-tailwindcss"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen"]
        }
      ]
    }
  }
  